#include "ft_printf.h"

char	*create_part(char *format, t_mod *flag)
{
	int i;
	char part[100];

	i = 0;
	if (flag.procent == 0)
		return (NULL);
	while (flag_is_valid(format, flag))
	{
		if (identifier_is_not(format, flag) == 1)
			part[k++] = format[i++];
		else if (identifier_is_not(format, flag) == 0)
			break;
	}
	return (part);
}
